@model ProductAddDto
@{
    ViewData["Title"] = "Create";
}

<div class="col-6">
    <form method="post" enctype="multipart/form-data">

        <div class="mb-3">
            <label class="form-label">Product Image</label>
            <input class="form-control"  asp-for="Photo">
            <span class="text-danger" asp-validation-for="Photo"></span>

        </div>

        <div class="mb-3">
            <label class="form-label">Product Name</label>
            <input type="text" class="form-control"  asp-for="Name" placeholder="Name">
            <span class="text-danger" asp-validation-for="Name"></span>

        </div>

        <div class="mb-3">
            <label class="form-label">Product Price</label>
            <input type="text" class="form-control"  asp-for="Price" placeholder="Price">
            <span class="text-danger" asp-validation-for="Price"></span>

        </div>

        <div class="col-lg-12">
            <h6 class="fw-semibold">Category</h6>
            <select class="form-control js-example-templating" name="categoryId">
                @foreach (var category in ViewBag.Categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
        </div>

        <div class="col-lg-12 mt-2">
            <h6 class="fw-semibold">Brand</h6>
            <select class="form-control js-example-templating" name="brandId">
                @foreach (var brand in ViewBag.Brands)
                {
                    <option value="@brand.Id">@brand.Name</option>
                }
            </select>
        </div>

        <div class="text-end mt-3">
            <button type="submit" class="btn btn-primary">Add Product</button>
            <a class="btn btn-secondary text-white mr-2" asp-action="Index">Go Back</a>
        </div>
    </form>
</div>



@section scripts {
    <partial name="_ValidationScriptsPartial" />
}